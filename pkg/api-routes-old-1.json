{
  "/api/user/new": {
    "url": "/api/user/new",
    "method": "POST",
    "description": "Регистрация нового аккаунта. После требуется подтверждение аккаунта через почту.",
    "to-server": {
      "тело-запроса": {
        "account": {
          "email": "user@example.com",
          "password": "passworD123!"
        }
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "The account has been successfully added for verification",
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Error description (e.g., Email address already in use)"
      }
    }
  },

  "/api/user/login": {
    "url": "/api/user/login",
    "method": "POST",
    "description": "Вход в аккаунт",
    "to-server": {
      "тело-запроса": {
        "account": {
          "email": "user@example.com",
          "password": "password123"
        }
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "Logged In",
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Invalid login credentials. Please try again"
      }
    }
  },

  "/api/user/set-tokens": {
    "url": "/api/user/set-tokens",
    "method": "POST",
    "description": "Установка токенов для пользователя",
    "to-server": {
      "заголовок": {
        "Authorization": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      },
      "тело-запроса": {
        "account": {
          "api_key": "public_api_key_example",
          "secret_key": "secret_key_example"
        }
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "Tokens have been successfully installed"
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Error description (e.g., Invalid request: SecretKey or APIKey is empty)"
      }
    }
  },

  "/api/user/refresh": {
    "url": "/api/user/refresh",
    "method": "POST",
    "description": "Обновление JWT токена",
    "to-server": {
      "заголовок": {
        "Authorization": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "Tokens have been successfully updated",
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Error description (e.g., Token has expired or is invalid)"
      }
    }
  },

  "/api/user/new/validate": {
    "url": "/api/user/new/validate",
    "method": "POST",
    "description": "Подтверждение почты, после регистрации",
    "to-server": {
      "заголовок": {
        "Validation": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      },
      "тело-запроса": {
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        },

        "key": "8645293"
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "The account has been successfully verified and created",
        "account": {
          "id": 1,
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "EInvalid request"
      }
    }
  },

  "/api/user/password/reset": {
    "url": "/api/user/password/reset",
    "method": "POST",
    "description": "Начало сброса пароля, отправка кода на почту.",
    "to-server": {
      "тело-запроса": {
        "account": {
          "email": "user@example.com"
        }
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "The message has been sent. Confirmation is expected",
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Invalid request"
      }
    }
  },

  "/api/user/password/validate": {
    "url": "/api/user/password/validate",
    "method": "POST",
    "description": "Проверка кода с почты, по токену и ключу.",
    "to-server": {
      "заголовок": {
        "Validation": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      },
      "тело-запроса": {
        "email": "user@example.com"
      },
      "key": "8645293"
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "The mail has been confirmed",
        "account": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
        }
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Invalid request"
      }
    }
  },

  "/api/user/password/set": {
    "url": "/api/user/password/set",
    "method": "POST",
    "description": "Установка нового пароля.",
    "to-server": {
      "заголовок": {
        "Validation": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
      },
      "тело-запроса": {
        "email": "user@example.com",
        "password": "passworD123!"
      }
    },
    "to-client-response": {
      "тело-ответа-в-случае-удачи": {
        "status": true,
        "message": "The mail has been confirmed"
      },
      "тело-ответа-в-случае-неудачи": {
        "status": false,
        "message": "Invalid request"
      }
    }
  }
}
